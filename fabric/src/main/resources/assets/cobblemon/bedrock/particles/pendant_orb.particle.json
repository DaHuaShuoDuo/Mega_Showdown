{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "cobblemon:pendant_orb",
			"basic_render_parameters": {
				"material": "particles_blend",
				"texture": "textures/particles/white_ball"
			}
		},
		"components": {
			"minecraft:emitter_rate_steady": {
				"spawn_rate": 600,
				"max_particles": 1000
			},
			"minecraft:emitter_lifetime_looping": {
				"active_time": 4
			},
			"minecraft:emitter_shape_point": {
				"offset": [0, 0.5, 0]
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": 1
			},
			"minecraft:particle_motion_parametric": {
				"relative_position": ["math.sin(v.particle_random_1*-360)*math.sin(v.particle_random_2*360+v.particle_age*500) * 1.2", "math.cos(v.particle_random_1*360) * 1.2", "math.sin(v.particle_random_1*360)*math.cos(v.particle_random_2*360+v.particle_age*500) * 1.2 + 0.5"]
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["0.6 * variable.particle_age", "0.6 * variable.particle_age"],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 16,
					"texture_height": 16,
					"uv": [0, 0],
					"uv_size": [16, 16]
				}
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime * variable.particle_random_4",
					"gradient": {
						"0.0": "#ffffffff",
						"0.5": "#FF99EEFF",
						"1.0": "#ffffffff"
					}
				}
			}
		}
	}
}